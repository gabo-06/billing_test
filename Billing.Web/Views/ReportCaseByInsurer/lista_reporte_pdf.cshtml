@using System.Diagnostics;
@model IEnumerable<Billing.Web.Models.SP_CASE_BY_INSURER_Result>
@{
    var i = 0;
}

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover dataTables-example" style="width:100%;font-size:7px;">
         <thead class="th_tabla" >  
         <tr border="0.5" bgcolor="#b42734" color="#ffffff">
           @*<td width="6%"></td>*@
           <td width="10%">Date OF Referral </td>
           <td width="16%">Patient's Name </td>
           <td width="16%">Insurer </td>
           <td width="16%">Adjuster </td>
           <td width="10%">Date of Injury </td>
           <td width="12%">Close Date </td>
           <td width="16%">Supervisor </td>
           <td width="16%">Nurse </td>
           <td width="14%">Claim Number </td>     
        </tr>
       </thead>
       <tbody>
        @foreach (var item in Model)
         {
                i = i + 1;
                 <tr border="0.5" >
                     @*<td >@i</td>*@
                     <td style="border: 1px solid #cccbcb;">@item.Cis_referralDate</td>                          
                     <td style="border: 1px solid #cccbcb;">@item.patient</td>                          
                     <td style="border: 1px solid #cccbcb;">@item.Ins_name</td>                          
                     <td style="border: 1px solid #cccbcb;">@item.Adjuster</td>              
                     <td style="border: 1px solid #cccbcb;">@item.Cis_accidentDate</td>                                               
                     <td style="border: 1px solid #cccbcb;">@item.Cis_closedDate</td>                                               
@*                     <td style="border: 1px solid #cccbcb;">@item.Supervisor</td>
                     <td style="border: 1px solid #cccbcb;">@item.Supervisor</td>
                     <td style="border: 1px solid #cccbcb;">---</td>*@
                     <td style="border: 1px solid #cccbcb;">@item.Provider</td>
                     <td style="border: 1px solid #cccbcb;">@item.Provider</td>
                     <td style="border: 1px solid #cccbcb;">@item.Cis_caseCode</td>
                 </tr>
         }   
        </tbody>
        
    </table>
</div>
